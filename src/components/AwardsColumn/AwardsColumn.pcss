
.AwardsColumn {
  margin: 2rem 0;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.AwardsColumn-award {
  background-color: #eee;
  border: solid 1px #eee;
  margin: 0 1px;
}

.AwardsColumn-imageWrapper {
  background-color: white;
  display: block;
  padding: 1rem;
}

.AwardsColumn-image {
  display: block;
  max-width: 100%;
}

.AwardsColumn-name {
  font-size: 1rem;
  font-weight: normal;
  background-color: #eee;
  margin: 0;
  padding: 1rem .5rem 0;
}

.AwardsColumn-name a {
  color: #444;
  text-decoration: none;
}

.AwardsColumn-project {
  font-size: 1rem;
  font-weight: normal;
  color: #777;
  margin: 0;
  padding: .5rem .5rem 1rem;
}
