@value ResponsiveDesktopFrom: (min-width: 64rem);
@value ResponsiveWideFrom: (min-width: 75rem);
@value ResponsiveWideTo: (max-width: 75rem);

@value ContainerDesktopWidth: 990px;
@value ContainerWideWidth: 1200px;

